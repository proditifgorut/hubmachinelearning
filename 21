import React from 'react';

const variants = {
  primary: 'bg-cyan-500 text-white hover:bg-cyan-600',
  secondary: 'bg-gray-700 text-gray-300 hover:bg-gray-600',
  outline: 'bg-transparent border border-gray-600 text-gray-300 hover:bg-gray-700',
};

const Button = ({ children, onClick, variant = 'primary', disabled = false, className = '' }) => {
  return (
    <button
      onClick={onClick}
      disabled={disabled}
      className={`px-4 py-2 rounded-lg shadow-sm transition-colors duration-200 disabled:bg-gray-600/50 disabled:text-gray-400 disabled:cursor-not-allowed flex items-center justify-center space-x-2 ${variants[variant]} ${className}`}
    >
      {children}
    </button>
  );
};

export default Button;
