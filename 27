import React from 'react';

const Input = ({ type = 'text', value, onChange, placeholder, className = '', disabled = false, step }) => {
  return (
    <input
      type={type}
      value={value}
      onChange={onChange}
      placeholder={placeholder}
      step={step}
      disabled={disabled}
      className={`w-full bg-gray-700 border border-gray-600 rounded-md py-2 px-3 text-white leading-tight focus:outline-none focus:ring-2 focus:ring-cyan-500 disabled:bg-gray-800 disabled:text-gray-500 ${className}`}
    />
  );
};

export default Input;
